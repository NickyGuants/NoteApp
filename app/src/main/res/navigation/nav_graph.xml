<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/courseListFragment">
    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.nicky.noteapp.NoteListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_note_list">
        <action
            android:id="@+id/action_noteListFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.nicky.noteapp.NoteFragment"
        android:label="Edit Note" >
        <argument
            android:name="position"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/courseListFragment"
        android:name="com.nicky.noteapp.CourseListFragment"
        android:label="Courses"
        tools:layout="@layout/fragment_course_list" />
</navigation>